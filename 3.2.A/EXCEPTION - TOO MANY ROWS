DECLARE
    vNombre        EMPLOYEES.FIRST_NAME%TYPE;
    vSalario       EMPLOYEES.SALARY%TYPE;
    vFechaContrato EMPLOYEES.HIRE_DATE%TYPE;
BEGIN
    SELECT FIRST_NAME,
           SALARY,
           HIRE_DATE
    INTO  vNombre,
          vSalario,
          vFechaContrato
    FROM  EMPLOYEES;

    DBMS_OUTPUT.PUT_LINE('El nombre es: ' || vNombre);
    DBMS_OUTPUT.PUT_LINE('El salario es: ' || TO_CHAR(vSalario,'99,9999L'));
    DBMS_OUTPUT.PUT_LINE('La fecha de contrataci√≥n es: ' ||
                         TO_CHAR(vFechaContrato,'FMDay Month Year'));
END;
/
