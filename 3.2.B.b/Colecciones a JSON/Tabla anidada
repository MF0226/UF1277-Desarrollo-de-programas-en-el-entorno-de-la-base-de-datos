SET SERVEROUTPUT ON

DECLARE
    -- Tabla indexada de cadenas
    TYPE tFrutas IS TABLE OF VARCHAR2(10) INDEX BY PLS_INTEGER;
    vFrutas tFrutas;
    vJSON JSON;
BEGIN
    -- Poblamos la colecci√≥n
    vFrutas(1) := 'banana';
    vFrutas(2) := 'manzana';
    vFrutas(3) := 'naranja';
    
    -- Convertimos a JSON
    vJSON := JSON(vFrutas);
    
    -- Mostramos el resultado
    DBMS_OUTPUT.PUT_LINE(JSON_SERIALIZE(vJSON));
END;
/
