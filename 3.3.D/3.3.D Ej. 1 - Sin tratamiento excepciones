SET SERVEROUTPUT ON

DECLARE
   -- Declaración de una variable de tipo registro basada en la estructura de la tabla EMPLOYEES.
   rEmpleado EMPLOYEES%ROWTYPE;
BEGIN
   -- Inicio de un bucle FOR que itera 100 veces, con 'i' tomando valores de 1 a 100.
   FOR i IN 1 .. 100 LOOP
      -- Intenta seleccionar todos los datos del empleado cuyo EMPLOYEE_ID coincide con el valor actual de 'i' y los guarda en 'rEmpleado'.
      SELECT * INTO rEmpleado
      -- Desde la tabla EMPLOYEES.
      FROM EMPLOYEES
      -- Donde el ID del empleado es igual al contador del bucle.
      WHERE EMPLOYEE_ID=i;
      -- Imprime una línea que concatena texto fijo con el valor del campo FIRST_NAME del registro 'rEmpleado'.
      DBMS_OUTPUT.PUT_LINE ('El empleado se llama '
                           ||rEmpleado.FIRST_NAME);
   END LOOP;
-- Fin del bloque PL/SQL.
END;
/

-- Como no se tratan las excepciones, termina con un error de aplicación
